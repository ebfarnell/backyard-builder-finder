{
  "name": "backyard-builder-finder",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant SaaS for finding buildable backyard space in residential parcels",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "format": "pnpm run --recursive format",
    "typecheck": "pnpm run --recursive typecheck",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean && docker-compose down -v",
    "infra:plan": "cd infra && terraform plan",
    "infra:apply": "cd infra && terraform apply",
    "infra:destroy": "cd infra && terraform destroy"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": ["prettier --write"],
    "*.{ts,tsx}": ["eslint --fix"]
  }
}