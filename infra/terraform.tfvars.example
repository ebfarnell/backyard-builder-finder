# ================================================
# Terraform Variables Example
# Copy to terraform.tfvars and customize
# ================================================

# ========================
# GENERAL CONFIGURATION
# ========================

project_name = "bbf"
environment  = "dev"
aws_region   = "us-west-2"

# ========================
# NETWORKING
# ========================

vpc_cidr = "10.0.0.0/16"

# ========================
# DATABASE
# ========================

db_instance_class           = "db.t3.micro"     # Use db.t3.small+ for production
db_allocated_storage        = 20
db_max_allocated_storage    = 100
db_backup_retention_period  = 7                 # 30+ for production
db_master_username         = "bbf_admin"
# db_master_password is set via environment variable or AWS Secrets Manager

# ========================
# COMPUTE
# ========================

api_cpu           = 512    # 1024+ for production
api_memory        = 1024   # 2048+ for production
api_desired_count = 2      # 3+ for production
api_max_capacity  = 10
api_min_capacity  = 1

# ========================
# SECURITY
# ========================

enable_deletion_protection = false  # true for production
# ssl_certificate_arn = "arn:aws:acm:us-west-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"

allowed_cidr_blocks = [
  "0.0.0.0/0"  # Restrict this in production
]

# ========================
# FEATURES
# ========================

enable_nat_gateway      = true
enable_cloudfront       = true
enable_lambda_functions = true
enable_redis_cluster    = true

# ========================
# MONITORING
# ========================

log_retention_days         = 30    # 90+ for production
enable_detailed_monitoring = false # true for production

# ========================
# STORAGE
# ========================

s3_force_destroy = true  # false for production

# ========================
# DOMAIN (OPTIONAL)
# ========================

# domain_name    = "yourdomain.com"
# api_subdomain  = "api"
# web_subdomain  = "app"

# ========================
# ADDITIONAL TAGS
# ========================

additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "Required"
}

# ================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ================================================

# Development
# - Smaller instance sizes
# - Shorter backup retention
# - Single AZ deployments
# - Less monitoring

# Staging
# - Production-like sizing
# - Full monitoring
# - Multi-AZ for testing

# Production
# - Larger instance sizes
# - Longer backup retention
# - Multi-AZ deployments
# - Full monitoring and alerting
# - Deletion protection enabled