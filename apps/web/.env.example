# ================================================
# Backyard Builder Finder Web App Environment Variables
# ================================================

# ========================
# GENERAL
# ========================

# Next.js environment
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Backyard Builder Finder"
NEXT_PUBLIC_APP_VERSION=1.0.0

# ========================
# API CONFIGURATION
# ========================

# Backend API URL (public - exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ========================
# AUTHENTICATION
# ========================

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production-use-32-char-random-string

# Database URL for NextAuth (same as API)
DATABASE_URL=postgresql://bbf_dev:bbf_dev@localhost:5432/bbf_dev

# OAuth providers (optional - for SSO)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ========================
# MAP CONFIGURATION
# ========================

# MapLibre style URLs (public - exposed to browser)
NEXT_PUBLIC_MAP_STYLE_URL=https://api.maptiler.com/maps/basic-v2/style.json
NEXT_PUBLIC_MAPTILER_KEY=

# Default map center (Los Angeles for demo)
NEXT_PUBLIC_DEFAULT_MAP_CENTER=[-118.2437,34.0522]
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=10

# ========================
# FEATURE FLAGS
# ========================

# Development features
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=false

# Analytics and monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# ========================
# EXTERNAL SERVICES
# ========================

# Sentry for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# PostHog for analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# ========================
# DEVELOPMENT
# ========================

# Enable React strict mode
NEXT_PUBLIC_STRICT_MODE=true

# Bundle analyzer
ANALYZE=false

# ========================
# SECURITY
# ========================

# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=

# Allowed domains for images
NEXT_PUBLIC_ALLOWED_IMAGE_DOMAINS=localhost,s3.amazonaws.com